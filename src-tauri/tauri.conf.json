{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Weft Desktop",
  "version": "0.1.0",
  "identifier": "com.tak.weft.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "bun run dev:ui",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Weft Desktop",
        "width": 1440,
        "height": 920,
        "minWidth": 960,
        "minHeight": 620,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "freezePrototype": true,
      "capabilities": ["default"],
      "headers": {
        "Cross-Origin-Opener-Policy": "same-origin",
        "X-Content-Type-Options": "nosniff"
      },
      "csp": {
        "default-src": "'self'",
        "base-uri": "'self'",
        "form-action": "'self'",
        "frame-ancestors": "'none'",
        "object-src": "'none'",
        "connect-src": ["'self'", "ipc:", "http://ipc.localhost", "https://ipc.localhost"],
        "font-src": ["'self'", "https://fonts.gstatic.com", "data:"],
        "style-src": ["'self'", "'unsafe-inline'", "https://fonts.googleapis.com"],
        "img-src": [
          "'self'",
          "asset:",
          "http://asset.localhost",
          "https://asset.localhost",
          "data:",
          "blob:",
          "https:"
        ],
        "frame-src": ["'self'", "https://www.openstreetmap.org"],
        "worker-src": ["'self'", "blob:"],
        "script-src": "'self'"
      },
      "devCsp": {
        "default-src": "'self'",
        "base-uri": "'self'",
        "form-action": "'self'",
        "frame-ancestors": "'none'",
        "object-src": "'none'",
        "connect-src": [
          "'self'",
          "ipc:",
          "http://ipc.localhost",
          "https://ipc.localhost",
          "http://localhost:5173",
          "http://127.0.0.1:5173",
          "ws://localhost:5173",
          "ws://127.0.0.1:5173"
        ],
        "font-src": ["'self'", "https://fonts.gstatic.com", "data:"],
        "style-src": ["'self'", "'unsafe-inline'", "https://fonts.googleapis.com"],
        "img-src": [
          "'self'",
          "asset:",
          "http://asset.localhost",
          "https://asset.localhost",
          "data:",
          "blob:",
          "https:"
        ],
        "frame-src": ["'self'", "https://www.openstreetmap.org"],
        "worker-src": ["'self'", "blob:"],
        "script-src": ["'self'", "'unsafe-eval'"]
      }
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["lxma"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
