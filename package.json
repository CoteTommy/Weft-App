{
  "name": "weft-desktop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "dev:ui": "vite",
    "dev:desktop": "tauri dev",
    "build": "tsc -b && vite build",
    "build:desktop": "tauri build",
    "build:desktop:mac": "tauri build --config src-tauri/tauri.conf.json",
    "build:desktop:linux": "tauri build --config src-tauri/tauri.linux.conf.json",
    "build:desktop:windows": "tauri build --config src-tauri/tauri.windows.conf.json",
    "build:desktop:all": "bun run build:desktop:mac && bun run build:desktop:linux && bun run build:desktop:windows",
    "build:desktop:all:quick": "for target in mac linux windows; do bun run build:desktop:$target || echo \"FAILED: build:desktop:$target\"; done",
    "typecheck": "tsc -b",
    "test": "bun test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier src --write",
    "format:check": "prettier src --check",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-deep-link": "^2.4.7",
    "clsx": "^2.1.1",
    "framer-motion": "^12.34.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^16.5.0",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  }
}
