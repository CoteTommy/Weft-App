{
  "name": "weft-desktop",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "prepare": "simple-git-hooks",
    "dev": "bunx tauri dev",
    "dev:ui": "vite",
    "dev:desktop": "bunx tauri dev",
    "build": "tsc -b && vite build",
    "build:desktop": "bunx tauri build",
    "build:desktop:mac": "bunx tauri build --config src-tauri/tauri.conf.json",
    "build:desktop:linux": "bunx tauri build --config src-tauri/tauri.linux.conf.json",
    "build:desktop:windows": "bunx tauri build --config src-tauri/tauri.windows.conf.json",
    "build:desktop:all": "bun run build:desktop:mac && bun run build:desktop:linux && bun run build:desktop:windows",
    "build:desktop:all:quick": "bun scripts/build-desktop-all-quick.mjs",
    "perf:seed:index": "WEFT_INDEX_STORE_PATH=.tmp/weft-bench-index.sqlite3 bun scripts/perf/seed-index.mjs --messages 100000 --threads 450 --force",
    "perf:bench:index": "WEFT_INDEX_STORE_PATH=.tmp/weft-bench-index.sqlite3 bun scripts/perf/index-query-bench.mjs",
    "perf:init:memory": "bun scripts/perf/init-memory-checkpoints.mjs",
    "perf:checkpoint:memory": "bun scripts/perf/memory-checkpoint.mjs",
    "perf:bench:memory": "bun scripts/perf/memory-bench.mjs",
    "perf:bench:idle": "scripts/perf/idle-cpu-sample.sh --seconds 300 --match 'weft|reticulum|lxmf' --target 3",
    "typecheck": "tsc -b",
    "test": "bun test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint-staged": "lint-staged",
    "format": "prettier src --write",
    "format:check": "prettier src --check",
    "preview": "vite preview"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.18",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-deep-link": "^2.4.7",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "bun-types": "^1.3.9",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "4.0.0-beta.0",
    "globals": "^16.5.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run lint-staged"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "bunx prettier --write",
      "bunx eslint --fix"
    ]
  }
}
